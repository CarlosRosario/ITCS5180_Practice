<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crosario.myfirstandroidapp.MainActivity"
    android:minWidth="160dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Carlos"
        android:id="@+id/hiCarlosTextView"
        android:autoText="false"
        android:background="#264a6f"
        android:minWidth="400dp"
        android:padding="5dp"
        android:textColor="#eedb0f"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I LOVE ANDROID!!!!!!!!!"
        android:id="@+id/iLoveAndroidiTextView"
        android:layout_below="@+id/hiCarlosTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:background="#01f70e"
        android:textColor="#e2ed17"
        android:minWidth="400sp"
        android:padding="5dp"
        android:textSize="45sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK ME OMG!!!!"
        android:id="@+id/clickMeButton"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/iLoveAndroidiTextView"
        android:layout_centerHorizontal="true"
        android:background="#0acdc6"
        android:padding="5dp"
        android:onClick="clickFunction" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textField"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/clickMeButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
